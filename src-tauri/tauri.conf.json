{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "angular-app",
  "version": "0.1.0",
  "identifier": "com.angular-app.app",
  "build": {
    "beforeDevCommand": "yarn start",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "yarn build",
    "frontendDist": "../dist/angular-app/browser"
  },
  "app": {
    "windows": [
      {
        "title": "angular-app",
        "width": 1200,
        "height": 700
      }
    ],
    "security": {
      "csp": null,
      "assetProtocol": {
        "enable": true,
        "scope": {
          "allow": ["**"]
        }
      }
    }
  },

  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
